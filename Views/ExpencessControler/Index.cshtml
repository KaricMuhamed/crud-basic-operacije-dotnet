@model IEnumerable<prviProjekat_2_.Models.Expences>

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Expence list</h2>
		</div>
		<div class="col-6 text-right">
			<a asp-controller="ExpencessControler" asp-action="Expences" class="btn btn-primary">Create new expence</a>
		</div>
	</div>
	<br />

	@if (Model.Count() > 0)
	{
		<table class="table table-bordered table-striped" style="width=100%">
			<thead>
				<tr>
					<th>
						Expence
					</th>
					<th>
						Amount
					</th>
					<th>
						Changes
					</th>

				</tr>
			</thead>
			<tbody>
				@foreach (var expence in Model)
				{
					<tr>
						<td width="35%">@expence.ExpenceName</td>
						<td width="35%">@expence.Amount</td>
						<td width="30%">
							<div class="w-100 btn-group" role="group">
								<a asp-controller="ExpencessControler" asp-action="Update" asp-route-Id="@expence.Id" class="btn btn-primary mx-1">Update</a>
                            <a asp-controller="ExpencessControler" asp-action="Delete" asp-route-Id="@expence.Id" class="btn btn-danger mx-1">Delete</a>
                        </div>
						</td>
					</tr>
				}
			</tbody>
		</table>
	}
	else
	{
		<p>No items created yet</p>
	}

</div>

